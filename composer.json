{
    "name": "tcgunel/omnipay-vakifbank",
    "type": "library",
    "description": "Omnipay extension for Vakıfbank",
    "keywords": [
        "vakifbank",
        "3d ödeme",
        "3d",
        "purchase",
        "enrollment"
    ],
    "homepage": "https://github.com/tcgunel/omnipay-vakifbank",
    "license": "MIT",
    "authors": [
        {
            "name": "Tolga Can Günel",
            "email": "tlgcngnl@gmail.com"
        },
        {
            "name": "Omnipay Contributors",
            "homepage": "https://github.com/tcgunel/omnipay-vakifbank/contributors"
        }
    ],
    "autoload": {
        "psr-4": {
            "Omnipay\\Vakifbank\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omnipay\\Vakifbank\\Tests\\": "tests"
        }
    },
    "require": {
        "php": "^7.4|^8.0",
        "league/omnipay": "^3",
        "ext-json": "*",
        "ext-simplexml": "*",
        "ext-dom": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9",
        "omnipay/tests": "^4",
        "brianium/paratest": "*",
        "fzaninotto/faker": "*",
        "http-interop/http-factory-guzzle": "^1.2"
    },
    "scripts": {
        "test": "vendor/bin/paratest --processes 6",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    }
}
